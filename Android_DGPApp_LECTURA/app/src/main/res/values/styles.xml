<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light"></style>

    <style name="StyledIndicators" parent="@android:style/Theme.Holo.Light">
    </style>
    
    <style name="HoloLightNoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#00ccff</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="base" parent="@android:style/TextAppearance">
    </style>
    
    <style name="ourText" parent="@style/base">
     	<item name="android:textColor">@color/NormalTextColor</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
     </style>
     
    <style name="bigText" parent="@style/ourText">
        <item name="android:textSize">@dimen/textSizeHeader</item>    
     </style>
    
    <style name="bigButton" parent="@style/bigText">
        <item name="android:textColor">@color/PureWhite</item>
        <item name="android:background">@drawable/services_button</item>    
     </style>
     
    <style name="OptionTitleText" parent="@style/base">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">#6a6a6a</item>
    </style>
    
    <style name="OptionSubtitleText" parent="@style/base">
        <item name="android:textSize">@dimen/textSizeVerySmall</item>
        <item name="android:textColor">#a6a6a6</item>
    </style>
    
    <style name="labelText" parent="@style/base">
     	<item name="android:textColor">#1a1a1a</item>
        <item name="android:textSize">@dimen/textSizeLabel</item>
     </style>
     
    <style name="labelTextTablet" parent="@style/base">
     	<item name="android:textColor">#1a1a1a</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
     </style>
     
    <style name="infoText" parent="@style/base">
     	<item name="android:textColor">#2d6692</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
     </style>
     
    <style name="pointsText" parent="@style/infoText">
        <item name="android:textSize">@dimen/textPoints</item>
     </style>
     
    <style name="titleText" parent="@style/base">
        <item name="android:textColor">#1a1a1a</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
    </style>
    
    <style name="titleTextTablet" parent="@style/base">
        <item name="android:textColor">#1a1a1a</item>
        <item name="android:textSize">@dimen/textSizeBodyBig</item>
    </style>
    
    <style name="FilePathText" parent="@style/infoText">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>
    
    <style name="HelpTitleText" parent="@style/base">
        <item name="android:textColor">@color/ics_blue_bright</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
    </style>
    
    <style name="HelpDescriptionText" parent="@style/base">
        <item name="android:textColor">@color/PureWhite</item>
        <item name="android:textSize">@dimen/textSizeHelpDescription</item>
    </style>


</resources>